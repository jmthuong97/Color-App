{
  "short_name": "Color Team",
  "name": "Color Team Management",
  "description": "Cái hội này sinh ra để làm màu",
  "version": "0.1.0",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_title": "Color Team"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "cookies",
    "webRequest",
    "webRequestBlocking",
    "https://*.facebook.com/",
    "https://*.firebaseio.com/"
  ]
}